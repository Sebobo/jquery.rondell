prepend js
  path = ''

append js
  :coffeescript
    $ ->
      # Sample rondell carousel
      $("#rondellTopDemo > img").rondell
        preset: "carousel"
        radius:
          x: 130
        center:
          left: 200
          top: 110
        itemProperties:
          size:
            width: 100
            height: 100
